@model AdvisementSys.Models.student
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.5.1.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Student.Create.js")" type="text/javascript"></script>

<link href="@Url.Content("~/Content/css/web.form.css")" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Create", "Student", FormMethod.Post, new {id="studentForm", name="studentForm" }))
{
    @Html.ValidationSummary(true)
    <p>Please complete the following fields in order to create a new student in the database.</p>
    <fieldset>
        <legend><h2>Create Student</h2></legend>
        <table>
            <tr>
                <td><h3>Student Information</h3></td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.studentid, "*Student ID:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.studentid, new { id="requiredFieldValidation"})
                        @Html.ValidationMessageFor(model => model.studentid)
                     </div>
                </td>

                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.email, "*Email:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.email, new { id = "requiredFieldValidation" })
                        @Html.ValidationMessageFor(model => model.email)
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.fname, "*First Name:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.fname, new { id = "requiredFieldValidation" })
                        @Html.ValidationMessageFor(model => model.fname)
                    </div>
                </td>

                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.phonenum, "*Phone Number:")
                    </div>                    
                 </td>
                 <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.phonenum, new { @class = "requiredFieldValidation", id="phoneValidation" })
                        @Html.ValidationMessageFor(model => model.phonenum)
                    </div>
                 </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.lname, "*Last Name:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.lname, new { @class = "requiredFieldValidation" })
                        @Html.ValidationMessageFor(model => model.lname)
                    </div>
                </td>

                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.cellnum, "Cell Number:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.cellnum, new { id = "phoneValidation" })
                        @Html.ValidationMessageFor(model => model.cellnum)
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.programcode, "*Program:")
                     </div>
                </td>
                 <td>
                    <div class="editor-field">
                        @Html.DropDownList("programcode", "Please Select a Program")
                        @Html.ValidationMessageFor(model => model.programcode)
                    </div>
                 </td>

                 <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.campus, "*Campus:")
                     </div>
                </td>
                 <td>
                    <div class="editor-field">
                        @Html.DropDownList("campus", "Please Select a Campus")
                        @Html.ValidationMessageFor(model => model.programcode)
                    </div>
                 </td>
            </tr>
            <tr>
                <td>                   
                    <div class="editor-label">
                         @Html.LabelFor(model => model.international, "International Student:")
                    </div>                    
                </td> 
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.international)
                        @Html.ValidationMessageFor(model => model.international)               
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.fulltimestatus, "Full Time:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.fulltimestatus)
                        @Html.ValidationMessageFor(model => model.fulltimestatus)
                    </div>
                </td>           
            </tr>

            <tr>
                <td>                   
                    <div class="editor-label">
                         @Html.LabelFor(model => model.acadprobation, "Academic Probation:")
                    </div>                    
                </td> 
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.acadprobation)
                        @Html.ValidationMessageFor(model => model.acadprobation)               
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.enrolled, "Enrolled:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.enrolled)
                        @Html.ValidationMessageFor(model => model.enrolled)
                    </div>
                </td>           
            </tr>

            <tr>
                <td><h3>Address</h3></td>
            </tr>
            
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.street, "*Address:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.street, new { @class="requiredFieldValidation"})
                        @Html.ValidationMessageFor(model => model.street)
                     </div>
                </td>

                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.city, "*City:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.city, new { @class = "requiredFieldValidation" })
                        @Html.ValidationMessageFor(model => model.city)
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.appartmentnum, "Apt. Number")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.appartmentnum)
                        @Html.ValidationMessageFor(model => model.appartmentnum)
                     </div>
                </td>

                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.province, "*Province:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.province, new SelectList(new[] { "Ontario", "Quebec", "Nova Scotia", "New Brunswick", "Manitoba", "British Columbia", "Prince Edward Island", "Saskatchewan", "Alberta", "Newfoundland and Labrador" }))
                        @Html.ValidationMessageFor(model => model.province)
                    </div>
                </td>
            </tr>
            
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.postalcode, "*Postal Code:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">'
                        @Html.EditorFor(model => model.postalcode, new { @class = "requiredFieldValidation", id = "postalCodeValidation"})
                        @Html.ValidationMessageFor(model => model.postalcode)
                     </div>
                </td>
             </tr>
            
        </table>
        <p>
         <input type="submit" value="Create" style="color:Red;" />
        </p>
    </fieldset>
    <p>Fields marked with an * are mandatory.</p>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<!--Block UI and Validation -->
<div id="blockConfirmMessage" style="display:none">
    Student has been added!
     @Html.ActionLink("Okay", "Index")
</div>

<script type="text/javascript">
    
    function openBlock(data) {
        $.blockUI({ message: $('#blockConfirmMessage') });
    }

</script>