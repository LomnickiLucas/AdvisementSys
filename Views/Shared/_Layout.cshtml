<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <!-- CuFon: Enables smooth pretty custom font rendering. 100% SEO friendly. To disable, remove this section -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/cufon-yui.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/arial.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/cuf_run.js")"></script>
    <!-- CuFon ends -->
    <style>
        ul#nav {top:14.5px;}
        ul.drop, ul.drop li, ul.drop ul { list-style: none; margin: 0; background: #444243; padding:0px;}
        ul.drop { position: relative; z-index: 1; float: left; }
        ul.drop li { float: left; line-height: 1.3em;  zoom: 1;}
        #subTest { visibility:hidden; position: absolute; top: 100%; left: 500px; z-index: 2; width: 175px;}
        ul.drop ul li { float: none; }
        ul.drop ul ul { top: -2px; left: 100%; }
    </style>
    <script type="text/javascript">
        function show() {
            var d = document.getElementById('subTest');
            d.style.visibility = "visible";
        }
    </script>
</head>
<body>
    <div class="header">
        <div class="header_resize">
            <div class="header_logOn" style="position: relative; float: right;">
                @Html.Partial("LogOn_Partial")
            </div>
            <div class="menu_nav">
                <ul id="nav" class="drop">
                    <li>@Html.ActionLink("Home", "Index", "Student") </li>
                    <li>@Html.ActionLink("Students", "Index", "Student") </li>
                    <li>@Html.ActionLink("Issues", "Index", "Issue") </li>
                    <li>@Html.ActionLink("Appointments", "Index", "Student") </li>
                    <li>@Html.ActionLink("Time Blocks", "Index", "Student") </li>
                    <li><a href="#" onmouseover="show()">Reports</a> </li>                     
                            <ul id="subTest" onmouseover="show()" onmouseout="this.style.visibility='hidden'">
                                <li>@Html.ActionLink("Advisor Issue Reports", "AdvisorIssueReport", "Reports")</li>
                                <li>@Html.ActionLink("Campus Issue Reports", "CampusIssueReport", "Reports")</li>
                                <li>@Html.ActionLink("Student Issue Reports", "StudentIssueReport", "Reports")</li>
                            </ul>
                     <li> @Html.ActionLink("About", "Index", "Student") </li>                                      
                </ul>
                <div class="clr">
                </div>
            </div>
            <div class="clr">
            </div>
            <div class="logo">
                <a href="../Student"><img src="@Url.Content("~/Content/themes/base/images/sheridan_logo.png")" alt=""/></a>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="content_resize">
            @RenderBody()
        </div>
        <div class="footer">
            <div class="footer_resize">
                <div class="clr">
                </div>
            </div>
        </div>
    </div>
</body>
</html>
