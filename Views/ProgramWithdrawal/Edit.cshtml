@model AdvisementSys.Models.Request.EditProgramWithdrawalModel

@{
    ViewBag.Title = "Update Application for Term or Complete Program Withdrawal Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/css/web.form.css")" rel="stylesheet" type="text/css" />

<div class="contentDiv">  
    @using (Html.BeginForm("Edit", "ProgramWithdrawal", FormMethod.Post, new { id = "programWithdrawalForm", name = "programWithdrawalForm" })) {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawid)
        @Html.HiddenFor(model => model._applicationForTermOrCompleteProgramWithdrawal.issueid)

        <h2>Update Appliction for Term or Complete Program Withdrawal Form</h2>

        <table style="width: 800px;">
            <tr>
                <td colspan="4">
                    <h3>Student Information</h3>
                </td>
            </tr>
            <tr>
                <td>
                    Name:
                </td>
                <td>
                    @Html.DisplayFor(model => model._student.fname) @Html.DisplayFor(model => model._student.lname)
                </td>
                <td>
                    Student ID:
                </td>
                <td>
                    @Html.DisplayFor(model => model._student.studentid)
                </td>
            </tr>
        
            <tr>
                <td>
                    Address:
                </td>
                <td>
                    @Html.DisplayFor(model => model._student.appartmentnum) @Html.DisplayFor(model => model._student.street)
                </td>
                <td>
                     City:
                </td>
                <td>
                    @Html.DisplayFor(model => model._student.city)
                </td>
            </tr>

            <tr>
                <td>
                    Province:
                </td>
                <td>
                    @Html.DisplayFor(model => model._student.province)
                </td>
                <td>
                    Postal Code:
                </td>
                <td>
                    @Html.DisplayFor(model => model._student.postalcode)
                </td>
            </tr>
            <tr>
                <td>
                    Full Time:
                </td>
                <td>
                    @Html.DisplayFor(model => model._student.fulltimestatus)
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <h3>Term or Program Withdrawal Form</h3>
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.date, "*Date:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.date, new { id = "datepicker", @class = "required", @Value = Model._applicationForTermOrCompleteProgramWithdrawal.date.ToString("dd/MM/yyyy") })
                    @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.date)
                </td>
                <td>
                    @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.status, "*Status:")
                </td>
                <td>
                    @Html.DropDownListFor(model => model._applicationForTermOrCompleteProgramWithdrawal.status, new SelectList(new[] { "In Progress", "On Hold", "Complete" }, Model._applicationForTermOrCompleteProgramWithdrawal.status), new { @class = "required", @style = "width:160px;" })
                    @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.status)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawalterm, "*Will be withdrawn on the term of:")
                </td>
                <td>
                    @Html.DropDownListFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawalterm, new SelectList(new[] { "Please Select", "Spring " + DateTime.Now.Year, "Fall " + DateTime.Now.Year, "Winter " + DateTime.Now.AddYears(1).Year, "Spring " + DateTime.Now.AddYears(1).Year }, Model._applicationForTermOrCompleteProgramWithdrawal.withdrawalterm), new { id = "withdrawalterm", @class = "select1Validation", @style = "width:160px;" })
                    @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawalterm)            
                </td>
                <td>
                    @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.returnterm, "Will return on the term of:")
                </td>
                <td>
                    @Html.DropDownListFor(model => model._applicationForTermOrCompleteProgramWithdrawal.returnterm, new SelectList(new[] { "Please Select", "Spring " + DateTime.Now.Year, "Fall " + DateTime.Now.Year, "Winter " + DateTime.Now.AddYears(1).Year, "Spring " + DateTime.Now.AddYears(1).Year, "Will Not Return" }, Model._applicationForTermOrCompleteProgramWithdrawal.returnterm), new { id = "returmterm", @class = "select2Validation", @style = "width:160px;" })
                </td>
            </tr>

            <tr>
                <td colspan="4">
                    @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.reasonwithdrawal, "*Reason for Withdrawal:")
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    @Html.TextAreaFor(model => model._applicationForTermOrCompleteProgramWithdrawal.reasonwithdrawal, new { id="reason", @class="required", @style = "width:775px; height:100px; resize:none;" })
                    @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.reasonwithdrawal)
                </td>
            </tr>
        
            <tr>
                <td colspan="4">
                    @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.continuingedcoursecode, "Continuing Education class(es) dropped:")
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    @Html.TextAreaFor(model => model._applicationForTermOrCompleteProgramWithdrawal.continuingedcoursecode, new { @style = "width:775px; resize:none;" })
                    @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.continuingedcoursecode)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.refundapproved, "Refund Approved:")
                </td>
                <td>
                    @Html.CheckBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.refundapproved)
                    @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.refundapproved)
                </td>
            </tr>        
        </table>

        <br />
        <div>
            <input type="submit" value="Update" class="Button" style="position: relative; left:10px;"/> 
        </div>
        <br />
        <p>Fields marked with an * are mandatory.</p>
    }
</div>
<div>
    @Html.ActionLink("Back to Application For Term or Program Withdrawal Form", "Details/" + Model._applicationForTermOrCompleteProgramWithdrawal.withdrawid)
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $("#datepicker").datepicker({ dateFormat: "dd/mm/yy" });
    });

    $.validator.addMethod("select1Validation", function (value) {
        if ($('#withdrawalterm').val() == "Please Select") {
            return false;
        }
        else {
            return true;
        }
    }, 'Please Select required fields');

    $.validator.addMethod("select2Validation", function (value) {
        if ($('#returmterm').val() == "Please Select") {
            return false;
        }
        else {
            return true;
        }
    }, 'Please Select required fields');

    $('#programWithdrawalForm').validate({

    });

</script>

