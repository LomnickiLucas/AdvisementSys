@model AdvisementSys.Models.Request.CreateProgramWithdrawalModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/css/web.form.css")" rel="stylesheet" type="text/css" />

<div class="contentDiv">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <h2>New Term or Complete Program Withdrawal Form</h2>
    <fieldset>
        <legend>applicationForTermOrCompleteProgramWithdrawal</legend>

        @Html.HiddenFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawid)
        @Html.HiddenFor(model => model._applicationForTermOrCompleteProgramWithdrawal.issueid)

        <div class="display-label">
            First Name:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.fname)
        </div>

        <div class="display-label">
            Last Name:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.lname)
        </div>

        <div class="display-label">
            Student ID:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.studentid)
        </div>

        <div class="display-label">
            Full Time Status:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.fulltimestatus)
        </div>

        <div class="display-label">
            Street:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.street)
        </div>

        <div class="display-label">
            Appartment #:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.appartmentnum)
        </div>

        <div class="display-label">
             City:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.city)
        </div>

        <div class="display-label">
            Province:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.province)
        </div>

        <div class="display-label">
            Postal Code:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.postalcode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.date)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.date, new { @Value = Model._applicationForTermOrCompleteProgramWithdrawal.date.ToString("dd MMM yyyy") })
            @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawalterm)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawalterm)
            @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.withdrawalterm)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.returnterm)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.returnterm)
            @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.returnterm)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.reasonwithdrawal)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.reasonwithdrawal)
            @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.reasonwithdrawal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.continuingedcoursecode)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.continuingedcoursecode)
            @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.continuingedcoursecode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.refundapproved)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.refundapproved)
            @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.refundapproved)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._applicationForTermOrCompleteProgramWithdrawal.status)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._applicationForTermOrCompleteProgramWithdrawal.status)
            @Html.ValidationMessageFor(model => model._applicationForTermOrCompleteProgramWithdrawal.status)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Issue", "Details/" + Model._applicationForTermOrCompleteProgramWithdrawal.issueid, "Issue")
</div></div>
