@model AdvisementSys.Models.Request.EditProbationaryContractModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>probationaryContractPlan</legend>

        @Html.HiddenFor(model => model._probationaryContractPlan.advisementid)
        @Html.HiddenFor(model => model._probationaryContractPlan.issueid)

        <div class="display-label">
            First Name:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.fname)
        </div>

        <div class="display-label">
            Last Name:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.lname)
        </div>

        <div class="display-label">
            Student ID:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.studentid)
        </div>

        <div class="display-label">
            Program:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.programcode) - @Html.DisplayFor(model => model._student.program.programname)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.incomingterm, "Incoming Term:")
        </div>
        
        <div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.incomingterm)
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.incomingterm)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.date)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.date, new { @Value = Model._probationaryContractPlan.date.ToString("dd MMM yyyy") })
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.particulers)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.particulers)
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.particulers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.conditions)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.conditions)
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.conditions)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.status)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.status)
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.status)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Probationary Contract Details", "Details/" + Model._probationaryContractPlan.advisementid) 
</div>
