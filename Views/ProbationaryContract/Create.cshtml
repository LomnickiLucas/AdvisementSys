@model AdvisementSys.Models.Request.CreateProbationaryContractModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/css/web.form.css")" rel="stylesheet" type="text/css" />

<div class="contentDiv">
@using (Html.BeginForm("Create", "ProbationaryContract", FormMethod.Post, new { id="probationContractForm", name="probationContractForm"}))
{
    @Html.ValidationSummary(true)

    <h2>New Probationary Contract Form</h2>
   
       <table style="width: 800px;">

       <tr>
       <td><h3>Student Information</h3></td>
       </tr>

       <tr>
       <td><h3>Action Form</h3></td>
       </tr>

       @Html.HiddenFor(model => model._probationaryContractPlan.advisementid)
       @Html.HiddenFor(model => model._probationaryContractPlan.issueid)

       <div class="display-label">
            First Name:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.fname)
        </div>

        <div class="display-label">
            Last Name:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.lname)
        </div>

        <div class="display-label">
            Student ID:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.studentid)
        </div>

        <div class="display-label">
            Program:</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.programcode) - @Html.DisplayFor(model => model._student.program.programname)
        </div>

        <tr>
            <td><div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.incomingterm, "Incoming Term:")
        </div></td>
        
        <td><div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.incomingterm)
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.incomingterm)
        </div></td>
       </tr>

       <tr>
       <td><div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.status, "Status:")
        </div>
       </td>
       <td><div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.status)
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.status)
        </div></td>

        <td><div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.date, "Date:")
        </div></td>
        
        <td><div class="editor-field">
            @Html.TextBoxFor(model => model._probationaryContractPlan.date, new { @Value = Model._probationaryContractPlan.date.ToString("dd MMM yyyy"), @style = "position:relative; left:98px;" })
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.date)
        </div></td>
       </tr>

       <tr>
       <td><div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.particulers, "Particulars:")
        </div></td>
       </tr>
       <tr><td colspan="4"><div class="editor-field">
            @Html.TextAreaFor(model => model._probationaryContractPlan.particulers, new { @style = "width:775px; height:100px; resize:none;" })
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.particulers)
        </div></td></tr>
       
       <tr>
       <td><div class="editor-label">
            @Html.LabelFor(model => model._probationaryContractPlan.conditions, "Action Plan/Conditions:")
        </div></td>
       </tr>
       <tr>
       <td colspan="4"><div class="editor-field">
            @Html.TextAreaFor(model => model._probationaryContractPlan.conditions, new { @style = "width:775px; height:300px; resize:none;" })
            @Html.ValidationMessageFor(model => model._probationaryContractPlan.conditions)
        </div></td>
       </tr>
       
       </table>
        <br />
     <div>
         <input type="submit" value="Create" class="Button" style="position: relative; left:10px;"/> </div><br />
}

<div>
    @Html.ActionLink("Back to List", "Index") 
</div>
</div>
