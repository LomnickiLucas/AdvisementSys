@model AdvisementSys.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/css/web.form.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="contentDiv">
    <h2>
        New User Account</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "accountForm", name = "accountForm" }))
    {
        @Html.ValidationSummary(true)
        <table>
            <tr>
                <td style="width:100px;">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.UserName, "Employee ID:") 
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "required" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Password, "Password: ")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.PasswordFor(model => model.Password, new { @class = "required" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ConfirmPassword, "Confirm Password:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "required" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.fname, "First Name:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.fname, new { @class = "required" })
                        @Html.ValidationMessageFor(model => model.fname)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.lname, "Last Name:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.lname, new { @class = "required" })
                        @Html.ValidationMessageFor(model => model.lname)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Email, "Email:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Email,  new { @class="required email"})
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.phonenum, "Phone Number:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.phonenum, new { @class = "required phone" })
                        @Html.ValidationMessageFor(model => model.phonenum)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.faculty, "Faculty:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.faculty,  new SelectList(Model.facultyList, Model.facultyList), new { @class = "required" })
                        @Html.ValidationMessageFor(model => model.faculty)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.position, "Role:")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.position, new SelectList(new[] { "Student Advisor", "Receptionist" }))
                        @Html.ValidationMessageFor(model => model.position)
                    </div>
                </td>
            </tr>
        </table>
        <br />
        <div>
            <input type="submit" value="Create" class="Button" style="position: relative; left: 10px;" />
            <input type="reset" class="Button" style="position: relative; left: 100px; bottom: 29px;" />
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $.validator.addMethod("phone", function (value) {
            return value.match(/^($)|(\d{3}\-\d{3}\-\d{4})$/);
        }, 'Please enter a valid Phone Number');
        $("#accountForm").validate();
    });

</script>
