@model AdvisementSys.Models.Request.EditCourseRegistrationModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>part_timeAnd_orAdditionalCourseRegistrationForm</legend>
        
        @Html.HiddenFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.registrationid)
    @Html.HiddenFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.issueid)

    <div class="display-label">
        First Name:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model._student.fname)
    </div>

    <div class="display-label">
        Last Name:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model._student.lname)
    </div>

    <div class="display-label">
        Student ID:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model._student.studentid)
    </div>

    <div class="display-label">
        Program:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model._student.programcode) - @Html.DisplayFor(model => model._student.program.programname)
    </div>

    <div class="display-label">Term</div>
    <div class="display-field">
        @Html.DisplayFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.term)
    </div>

    <div class="display-label">Program Year</div>
    <div class="display-field">
        @Html.DisplayFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.progyear)
    </div>

    <div class="display-label">International Student</div>
    <div class="display-field">
        @Html.DisplayFor(model => model._student.international)
    </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.date)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.date, new { @Value = Model._part_timeAnd_orAdditionalCourseRegistrationForm.date.ToString("dd MMM yyyy") })
            @Html.ValidationMessageFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.coursecode)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.coursecode)
            @Html.ValidationMessageFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.coursecode)
        </div>

        <div class="display-label">CLS Num</div>
        <div class="display-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.clsnum)
        </div>

        <div class="display-label">Credit Value</div>
        <div class="display-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.creditvalue)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.coursecharges)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.coursecharges)
            @Html.ValidationMessageFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.coursecharges)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.matfees)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.matfees)
            @Html.ValidationMessageFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.matfees)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.compcharges)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.compcharges)
            @Html.ValidationMessageFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.compcharges)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.status)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.status)
            @Html.ValidationMessageFor(model => model._part_timeAnd_orAdditionalCourseRegistrationForm.status)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Part Time And/or Additional Course Registration Form", "Details/" + Model._part_timeAnd_orAdditionalCourseRegistrationForm.registrationid)
</div>
