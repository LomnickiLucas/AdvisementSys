@model AdvisementSys.Models.Request.CreateIssueRequestModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>issue</legend>
        @Html.HiddenFor(model => model._issue.studentid)

        <div class="display-label">student</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.studentid)
        </div>

        <div class="display-label">student</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.fname)
        </div>

        <div class="display-label">student</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.lname)
        </div>

        <div class="display-label">student</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.campus)
        </div>

        <div class="display-label">student</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.phonenum)
        </div>

        <div class="display-label">student</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.email)
        </div>

        <div class="display-label">student</div>
        <div class="display-field">
            @Html.DisplayFor(model => model._student.program)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._issue.date)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model._issue.date, new { @Value = Model._issue.date.ToString("dd MMM yyyy") })
            @Html.ValidationMessageFor(model => model._issue.date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._issue.status)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model._issue.status, new SelectList(new [] {"In Progress", "On Hold", "Complete"}))
            @Html.ValidationMessageFor(model => model._issue.status)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._issue.urgency)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model._issue.urgency, new SelectList(new [] {"High", "Medium", "Low"}))
            @Html.ValidationMessageFor(model => model._issue.urgency)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model._issue.issuename)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model._issue.issuename)
            @Html.ValidationMessageFor(model => model._issue.issuename)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Student Details", "Details/" + Model._issue.studentid, "Student")
</div>
